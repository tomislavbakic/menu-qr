generator client {
  provider = "prisma-client-js"
 // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemType {
  FOOD
  DRINK
  ACTIVITY
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  type      ItemType
  available Boolean  @default(true)
  createdAt DateTime @default(now())
  orders    Order[]
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  createdAt DateTime @default(now())
}

// Add this enum to your schema.prisma file
enum OrderStatus {
  PENDING
  COMPLETED
}

// Updated Order model
model Order {
  id        Int         @id @default(autoincrement())
  guestName String
  itemId    Int
  note      String?
  status    OrderStatus @default(PENDING)  // Add this field
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  // Relations
  item      Item        @relation(fields: [itemId], references: [id])
  
  @@index([itemId])
  @@index([createdAt])
  @@index([status])  // Add index for status
}